<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/greyrcorner"
    android:padding="@dimen/layout_10"
    android:id="@+id/wrap"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginBottom="@dimen/layout_5">
    <!-- riple effect gridview dengan menambhakan foregorund -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rv_name"
        android:text="NAME"
        android:textSize="@dimen/text_16"
        android:textStyle="bold"
        android:textAllCaps="true"/>
        <!-- android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rv_campus"
            android:text="Kampus"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rv_phone"
            android:text="Phone"
            android:gravity="right"
            android:layout_weight="2"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rv_input"
        android:text="Input"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

</LinearLayout>