<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/greyrcorner"
    android:padding="@dimen/layout_10"
    android:id="@+id/wrap"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginBottom="@dimen/layout_5">
    <!-- riple effect gridview dengan menambhakparticipant_item_layout.xmlan foregorund -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rv_name"
            android:text="NAME"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Inactive"
            android:textSize="9sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/red_round_corner_small_50"
            android:id="@+id/tv_rv_inactive"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/layout_5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rv_campus"
            android:text="Kampus"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rv_phone"
            android:text="Phone"
            android:gravity="right"
            android:layout_weight="2"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rv_input"
        android:text="Input"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

</LinearLayout>