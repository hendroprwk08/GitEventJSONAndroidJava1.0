<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/greyrcorner"
    android:padding="@dimen/layout_10"
    android:id="@+id/wrap"
    android:layout_marginBottom="@dimen/layout_5">

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Inactive"
        android:textSize="9sp"
        android:layout_marginBottom="@dimen/layout_5"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/red_round_corner_small_50"
        android:id="@+id/tv_inactive"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_event_event"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_events"
            android:textAllCaps="true"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />
        <!-- android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"-->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/layout_5"
            android:tint="@color/white"
            android:padding="@dimen/layout_5"
            android:clickable="true"
            android:background="@drawable/blue_round_corner_50"
            android:src="@drawable/ic_email_white_24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:id="@+id/tv_event_date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/layout_5"
            android:text="TIME"
            android:id="@+id/tv_event_time"/>

    </LinearLayout>


</LinearLayout>